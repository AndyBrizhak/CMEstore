@model IEnumerable<CMEstore.Models.Brand>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Бренды</h2>
        </div>
        <div class="col-6">
            Создать новый Бренд
        </div>
    </div>

    <br /><br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
            <tr>
                <th>
                    Название Бренда
                </th>
                <th>
                    Порядок вывода на странице
                </th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            @foreach(var obj in Model)
            {
                <tr>
                    <td width="50%">@obj.Name</td>
                    <td width="30%">@obj.DisplayOrder</td>
                    <td></td>
                </tr>
            }
            </tbody>
        </table>
    }
    else
    {
        <p> В базе данных еще нет Брендов.</p>
    }

</div>

